:{$PORT} {
	root ./
    encode zstd gzip        # 压缩资源文件 加快访问速度
    file_server browse

	route /admin/* {
        respond "I am admin"
    }

    route /google/* {
        # respond "I am admin"
        reverse_proxy * {$UPSTREAM:"https://www.google.com"} {
            header_up Host {upstream_hostport}
        }
    }
}

